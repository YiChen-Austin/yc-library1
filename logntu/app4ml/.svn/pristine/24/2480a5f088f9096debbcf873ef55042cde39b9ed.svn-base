<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ include file="../include/head.jsp"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title>活动中心</title>
<link rel="icon" href="<%=path%>/img/lt_ico.ico"type="image/x-icon" />
<meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
<meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">
<meta name="Description" content="龙途" />
<meta name="Keywords" content="漫浪游戏,通行证,密宝,SDO,SNDA,网络游戏,游戏充值，龙途，传奇" />
<link href="<%=path%>/css/style.css" rel="stylesheet" />
</head>
<body>
<jsp:include page="../include/top.jsp" >
	<jsp:param name="tag" value="announ" />
</jsp:include>
<div class="activity-banner"></div>
<div class="w1200 activity-list" id="list"> 
	
<c:forEach  var="articleBean"  items="${articleList }" >
  <a  href="<%=project%>/article/activity/${articleBean.id}" class='activity-a fl' id="${articleBean.id}" target='_blank'>
		<div>
			<span>
				${articleBean.title}
			</span>
			<p>
				活动开始时间：${articleBean.publishTime}
			</p>
		</div>
		<img  src='http://cqlongtu.com${articleBean.imgUrl}'/>
	</a>
</c:forEach>  
	
 </div>
<div class="page"> </div> 
<span id=totalData class="none"></span>
<jsp:include page="../include/bottom.jsp" />
<script src="<%=path%>/js/jquery-1.10.1.min.js"></script>
<script src="<%=path%>/js/jquery.pagination.js"></script>

<script>
$.ajax({
    url:'<%=project%>/article/loadArticles',
    data:{categoryId:'402881f9589a81ba01589a88dcb50002'},
    type: 'post',
    dataType: 'json',
    success: function (json) {
    		$('#totalData').html(json.pageBean.totalRecords);
    		list();
    	}
    })
var pageSize = 10;
function list(){
	$('.page').pagination({
		coping:true,
		totalData:$('#totalData').text(),
		showData:pageSize,
 	    prevContent:'上一页',
 	    nextContent:'下一页',
	    callback:function(index){
	    	$('#list').html('');
	    	$.ajax({
	            url:'<%=project%>/article/loadArticles',
	            data:{categoryId:'402881f9589a81ba01589a88dcb50002',curPage:index.getCurrent()},
	            type: 'post',
	            dataType: 'json',
	            success: function (json) {
	            	for (var i = 0; i < json.articles.length; i++) { 
	            		$('#list').append(
	            				"<a  href='<%=project%>/article/activity/"+json.articles[i].id+"'  class='activity-a fl' id='"+json.articles[i].id+"'  target='_blank'>"+
	                				"<div>"+
	                					"<span>"+
	                						json.articles[i].title
	                					+"</span>"+
	                					"<p>"+
	                						'活动开始时间：'+json.articles[i].publishTime
	            						+"</p>"+
	                				"</div>"+
	                				"<img  src='/app4ml"+json.articles[i].imgUrl+"' />"+
	                			"</a>"
	                	)
	            	}
	           	}
	        })
	    }
	});
}
</script>
</body>
</html>

