<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ include file="../include/head.jsp"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title>公告列表</title>
<link rel="icon" href="<%=path%>/img/lt_ico.ico"type="image/x-icon" />
<meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
<meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">
<meta name="Description" content="龙途" />
<meta name="Keywords" content="漫浪游戏,通行证,密宝,SDO,SNDA,网络游戏,游戏充值，龙途，传奇" />
<link href="<%=path%>/css/style.css" rel="stylesheet" />
</head>
<body>
<jsp:include page="../include/top.jsp" >
	<jsp:param name="tag" value="announ" />
</jsp:include>
<!-- Swiper -->
<div class="announ-banner"></div>
<div class="w1200 announ" id="list">
<c:forEach  var="articleBean"  items="${articleList }">
	<a  href="<%=project%>/article/detail/${articleBean.id}" class='announ-div' id="${articleBean.id}"target='_blank'>
		<div class='fl'>
			<img  src='/app4ml${articleBean.imgUrl}'/>
		</div>
		<div class='fl announ-divcom'>
			<span>${articleBean.title}</span>
			<label>发布时间：${articleBean.publishTime}</label>
			<p>
				${articleBean.artAbstract}
			</p>
		</div>
	</a>
</c:forEach>
</div>
<div class="loading">
	<img src="<%=path%>/img/loading.gif" />
</div>
<span id=totalData class="none">${pageBean.totalRecords}</span>
<div class="page"></div>
<jsp:include page="../include/bottom.jsp" />
<script src="<%=path%>/js/jquery-1.10.1.min.js"></script>
<script src="<%=path%>/js/jquery.pagination.js"></script>
<script>
$(function(){
	var pageSize = 10;
	$('.page').pagination({
		coping:true,
		totalData:$('#totalData').text(),
		showData:pageSize,
 	    prevContent:'上一页',
 	    nextContent:'下一页',
	    callback:function(index){
	    	$('.loading').css('display','block');
	    	$('#list').html('');
	    	$.ajax({
	            url:'<%=project%>/article/loadArticles',
	            data:{categoryId:'402881f9589a81ba01589a86ae9e0001',curPage:index.getCurrent(),pageSize:10},
	            type: 'post',
	            dataType: 'json',
	            success: function (json) {
	            	$('.loading').css('display','none');
	            	for (var i = 0; i < json.articles.length; i++) { 
	            		$('#list').append(
	               			"<a  href='<%=project%>/article/detail/"+json.articles[i].id+"'  class='announ-div' id='"+json.articles[i].id+"'  target='_blank'>"+
	               				"<div class='fl'>"+
	               					"<img  src='/app4ml"+json.articles[i].imgUrl+"' />"+
	               				"</div>"+
	               				"<div class='fl announ-divcom'>"+
	               				 	"<span>"+json.articles[i].title+"</span>"+
	               		            "<label>"+"发布时间："+json.articles[i].publishTime+"</label>"
	               		            +"<p>"+
	               		           	 	json.articles[i].artAbstract
	               		            +"</p>"
	           					+"</div>"+
	               			"</a>"
	                	)
	            	}
	           	},
	           	error:function(){
	           		$('.loading').css('display','none');
	           		$('#list').append(
	           				"<div style='text-align: center;font-size: 18px;color: #666;    line-height: 200px;'>"+"数据跑出地球了！"+"</div>"
	           		)
	           	},
	        })
	    }
	});
})
</script>
</body>
</html>

