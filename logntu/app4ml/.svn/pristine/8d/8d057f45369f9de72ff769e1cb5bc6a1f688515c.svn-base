$(function(){
/*下载页面开始*/
    //获取浏览器高度
    $('.download-bg').css('min-height',$(window).height());
    //选项卡
    $('.download-tab:gt(0)').hide();//隐藏大于0
    var stb1=$('.download-ul ul li');
    stb1.click(function(){
        $(this).addClass('active')
            .siblings().removeClass('active');
        var stb_index1=stb1.index(this);//index(this)获取对象参数 获取ct的第几个
        $('.download-tab').eq(stb_index1).show()//如果ct的和li相等就显示
            .siblings().hide();//隐藏掉上一个执行
    });
/*下载页面结束*/
/*游戏资料开始*/
    //获取浏览器高度
    $('.game-bg').css('min-height',$(window).height());
    //获取浏览器高度
    $('.game-bgtwo').css('min-height',$(window).height());
    //选项卡
    $('.game-Concon:gt(0)').hide();//隐藏大于0
    var stb2=$('.game-nav a');
    stb2.click(function(){
        $(this).addClass('active')
            .siblings().removeClass('active');
        var stb_index2=stb2.index(this);//index(this)获取对象参数 获取ct的第几个
        $('.game-Concon').eq(stb_index2).show()//如果ct的和li相等就显示
            .siblings().hide();//隐藏掉上一个执行
    });
    //左侧下拉
    var Accordion = function(el, multiple) {
        this.el = el || {};
        this.multiple = multiple || false;
        var links = this.el.find('.link');
        links.on('click', {el: this.el, multiple: this.multiple}, this.dropdown)
    }
    Accordion.prototype.dropdown = function(e) {
        var $el = e.data.el;
        $this = $(this),
            $next = $this.next();
        $next.slideToggle();
        $this.parent().toggleClass('open');
        if (!e.data.multiple) {
            $el.find('.submenu').not($next).slideUp().parent().removeClass('open');
        };
    }
    var accordion = new Accordion($('#accordion'), false);
/*游戏资料结束*/
    /*监听*/
    $(window).scroll(function() {
        if($(window).scrollTop() >= 440){
            $('.lf-nav').css({"position":"fixed","top":"120px",});
        }else{
            $('.lf-nav').css({ "position": "absolute", "top": "0", });
        }

        st = $(window).scrollTop();
        if(st < 440){
            $("#fb2,#fb3,#fb4,#fb5,#fb6,#fb7").removeClass("active");
            $("#fb1").addClass("active");
        }else if(st >= 770 && st < 1080){
            $("#fb1,#fb3,#fb4,#fb5,#fb6,#fb7").removeClass("active");
            $("#fb2").addClass("active");
        }else if(st >= 1080 && st < 1390){
            $("#fb1,#fb2,#fb4,#fb5,#fb6,#fb7").removeClass("active");
            $("#fb3").addClass("active");
        }else if(st >= 1390 && st < 1720){
            $("#fb1,#fb2,#fb3,#fb5,#fb6,#fb7").removeClass("active");
            $("#fb4").addClass("active");
        }else if(st >= 1720 && st < 1840){
            $("#fb1,#fb2,#fb3,#fb4,#fb6,#fb7").removeClass("active");
            $("#fb5").addClass("active");
        }else if(st >= 1840 && st < 1950){
            $("#fb1,#fb2,#fb3,#fb4,#fb5,#fb7,#fb8").removeClass("active");
            $("#fb6").addClass("active");
        }else if(st >= 1950){
            $("#fb1,#fb2,#fb3,#fb4,#fb5,#fb6").removeClass("active");
            $("#fb7").addClass("active");
        }
    });
    $("#fb1").click(function () {
        $('html,body').animate({scrollTop: '0px'}, 200);
    });
    $("#fb2").click(function () {
        $('html,body').animate({scrollTop: '770px'}, 200);
    });
    $("#fb3").click(function () {
        $('html,body').animate({scrollTop: '1080px'}, 200);
    });
    $("#fb4").click(function () {
        $('html,body').animate({scrollTop: '1390px'}, 200);
    });
    $("#fb5").click(function () {
        $('html,body').animate({scrollTop: '1720px'}, 200);
        //$('.list_navBg').css({"top":"272px"});
    });
    $("#fb6").click(function () {
        $('html,body').animate({scrollTop: '1840px'}, 200);
        //$('.list_navBg').css({"top":"340px"});
    });
    $("#fb7").click(function () {
        $('html,body').animate({scrollTop: '1950px'}, 200);
        //$('.list_navBg').css({"top":"408px"});
    });
});
