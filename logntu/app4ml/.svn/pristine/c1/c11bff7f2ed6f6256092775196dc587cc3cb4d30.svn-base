
//职业特点
$(function () {
    $(".qieBtn div").each(function (i) {
        $(this).mouseover(function () {
            $(".qieBtn div").removeClass("on5");
            $(".qieBtn div").eq(i).addClass("on5");
            $(".tTit span").hide();
            $(".tTit span").eq(i).show();
            $(".tPic ul li").hide();
            $(".tPic ul li").eq(i).show();
        });
    });
});